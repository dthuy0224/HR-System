                    todayHighlight: true,
                    autoclose: true,
                    clearBtn: true,
                    todayBtn: 'linked',
                    orientation: 'bottom auto',
                    container: '#calendar-container'
                });

                // Toggle calendar visibility with animation
                $('#calendarBtn').click(function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    $('#calendar-container').slideToggle(200);
                });

                // Hide calendar when clicking outside
                $(document).click(function(e) {
                    if (!$(e.target).closest('#calendar-container, #calendarBtn').length) {
                        $('#calendar-container').slideUp(200);
                    }
                });

                // Update date when selecting from calendar
                $('#dashboard-calendar').on('changeDate', function(e) {
                    const date = e.date;
                    const monthNames = ["January", "February", "March", "April", "May", "June",
                        "July", "August", "September", "October", "November", "December"];
                    
                    const selectedMonthText = monthNames[date.getMonth()] + ', ' + date.getFullYear();
                    $('#selectedMonth').text(selectedMonthText);
                    
                    // Mark the selection as manually set so it doesn't get overwritten
                    $('#selectedMonth').data('manually-set', true);
                    
                    // Here you can add code to load data for the selected date
                    loadDayData(date);
                    
                    // Hide the calendar with animation
                    $('#calendar-container').slideUp(200);
                });

                // Update real-time clock
                updateCurrentDate();
                // Update every second
                setInterval(updateCurrentDate, 1000);
                
                // Set current month in the date selector on initial load
                const now = new Date();
                const monthNames = ["January", "February", "March", "April", "May", "June",
                    "July", "August", "September", "October", "November", "December"];
                $('#selectedMonth').text(monthNames[now.getMonth()] + ', ' + now.getFullYear());
            });

            // Function to update current date and time with improved formatting
            function updateCurrentDate() {
                const now = new Date();
                const dayNames = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];
                const monthNames = ["January", "February", "March", "April", "May", "June",
                    "July", "August", "September", "October", "November", "December"];
                
                // Get the day of month with suffix (1st, 2nd, 3rd, etc.)
                const day = now.getDate();
                let daySuffix = "th";
                if (day === 1 || day === 21 || day === 31) daySuffix = "st";
                else if (day === 2 || day === 22) daySuffix = "nd";
                else if (day === 3 || day === 23) daySuffix = "rd";
                
                // Format time in 12-hour format with AM/PM
                let hours = now.getHours();
                const ampm = hours >= 12 ? 'PM' : 'AM';
                hours = hours % 12;
                hours = hours ? hours : 12; // Convert 0 to 12
                const minutes = now.getMinutes().toString().padStart(2, '0');
                const seconds = now.getSeconds().toString().padStart(2, '0');
                
                // Set the day name and full date with time
                $('.day-name').text(dayNames[now.getDay()]);
                $('#currentDate').text(`${day}${daySuffix} of ${monthNames[now.getMonth()]} ${now.getFullYear()} ${hours}:${minutes}:${seconds} ${ampm}`);
            }

